{
  "name": "pajat",
  "version": "1.0.0",
  "description": "Pajat",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up",
    "bash": "docker-compose run app bash",
    "reset": "docker-compose down -v && docker-compose up --build",
    "psql": "docker-compose exec db psql -U postgres -d postgres",
    "build": "react-scripts build",
    "start:front": "react-scripts start",
    "start:prod": "NODE_ENV=production node ./src/server/index.js",
    "start:dev": "NODE_ENV=development concurrently \"node-dev ./src/server/index.js\" \"CHOKIDAR_USEPOLLING=true react-scripts start\" ",
    "format": "prettier --write 'src/**/*.js'",
    "lint": "eslint 'src/**/*.js'",
    "prepare": "husky install",
    "migrate:make": "knex migrate:make --knexfile ./src/server/knexfile.js --",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/server/knexfile.js --"
  },
  "lint-staged": {
    "src/**/*.js": "eslint",
    "*.{js,json,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=16.0"
  },
  "author": "Kalle Ilves",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.5",
    "@mui/lab": "^5.0.0-alpha.53",
    "@mui/material": "^5.0.6",
    "@mui/x-data-grid": "^4.0.2",
    "axios": "^0.24.0",
    "date-fns": "^2.25.0",
    "dotenv": "^10.0.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "formik": "^2.2.9",
    "husky": "^7.0.4",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.21",
    "lint-staged": "^11.2.6",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "notistack": "^2.0.3",
    "objection": "^2.2.17",
    "pg": "^8.7.1",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.1.0",
    "react-query": "^3.30.0",
    "react-router": "^6.0.0",
    "react-router-dom": "^6.0.0",
    "react-scripts": "^5.0.1",
    "store2": "^2.12.0",
    "string-to-color": "^2.2.2",
    "unfuck-spa-shibboleth-session": "^3.1.3",
    "unfuck-utf8-headers-middleware": "^1.0.1",
    "winston": "^3.3.3",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "concurrently": "^6.0.0",
    "cypress": "^7.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "node-dev": "^7.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "client/*"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/cypress"
    ]
  },
  "proxy": "http://localhost:8000"
}
